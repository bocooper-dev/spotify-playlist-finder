{
  "title": "Spotify Playlist Scraper Input",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "playlistIds": {
      "title": "Playlist IDs",
      "type": "array",
      "description": "Array of Spotify playlist IDs to scrape (without 'spotify:playlist:' prefix)",
      "items": {
        "type": "string",
        "pattern": "^[0-9A-Za-z]{22}$"
      },
      "minItems": 1,
      "maxItems": 100,
      "editor": "json"
    },
    "maxConcurrency": {
      "title": "Max Concurrency",
      "type": "integer",
      "description": "Maximum number of concurrent requests (1-10)",
      "minimum": 1,
      "maximum": 10,
      "default": 3
    },
    "requestDelay": {
      "title": "Request Delay (ms)",
      "type": "integer",
      "description": "Delay between requests in milliseconds to avoid rate limiting",
      "minimum": 1000,
      "maximum": 10000,
      "default": 2000
    },
    "retryCount": {
      "title": "Retry Count",
      "type": "integer",
      "description": "Number of retries for failed requests",
      "minimum": 0,
      "maximum": 5,
      "default": 3
    },
    "proxy": {
      "title": "Proxy Configuration",
      "type": "object",
      "description": "Proxy settings for requests",
      "properties": {
        "useApifyProxy": {
          "title": "Use Apify Proxy",
          "type": "boolean",
          "description": "Use Apify's residential proxy network",
          "default": true
        },
        "apifyProxyGroups": {
          "title": "Proxy Groups",
          "type": "array",
          "description": "Specific proxy groups to use",
          "items": {
            "type": "string"
          }
        },
        "apifyProxyCountry": {
          "title": "Proxy Country",
          "type": "string",
          "description": "Country code for proxy location (e.g., 'US', 'GB')"
        }
      },
      "default": {
        "useApifyProxy": true
      }
    },
    "sessionPoolOptions": {
      "title": "Session Pool Options",
      "type": "object",
      "description": "Configuration for browser session management",
      "properties": {
        "maxPoolSize": {
          "title": "Max Pool Size",
          "type": "integer",
          "description": "Maximum number of sessions in the pool",
          "minimum": 1,
          "maximum": 1000,
          "default": 100
        },
        "sessionRotationIntervalSecs": {
          "title": "Session Rotation Interval",
          "type": "integer",
          "description": "How often to rotate sessions (seconds)",
          "minimum": 60,
          "maximum": 3600,
          "default": 600
        }
      },
      "default": {
        "maxPoolSize": 100,
        "sessionRotationIntervalSecs": 600
      }
    },
    "includeOwnerProfile": {
      "title": "Include Owner Profile Data",
      "type": "boolean",
      "description": "Whether to scrape additional owner profile information",
      "default": true
    },
    "includeTrackSample": {
      "title": "Include Track Sample",
      "type": "boolean", 
      "description": "Whether to include a sample of tracks for genre analysis",
      "default": true
    },
    "trackSampleSize": {
      "title": "Track Sample Size",
      "type": "integer",
      "description": "Number of tracks to sample for genre analysis",
      "minimum": 1,
      "maximum": 50,
      "default": 10
    }
  },
  "required": ["playlistIds"]
}