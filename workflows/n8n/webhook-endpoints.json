{
  "name": "N8N Webhook Endpoints Configuration",
  "description": "Central configuration for all N8N webhook endpoints used by the Spotify Playlist Discovery System",
  "version": "1.0.0",
  "endpoints": [
    {
      "id": "spotify-token-request",
      "name": "Spotify Token Request",
      "path": "spotify-token",
      "method": "GET",
      "workflow": "spotify-auth-workflow",
      "nodeId": "token-webhook",
      "description": "Endpoint for retrieving cached Spotify access tokens",
      "authentication": {
        "type": "headerAuth",
        "required": true,
        "header": "X-API-Key",
        "description": "API key for internal service authentication"
      },
      "rateLimit": {
        "requests": 100,
        "window": "1m",
        "strategy": "sliding"
      },
      "cache": {
        "enabled": true,
        "ttl": 300,
        "key": "spotify_token_{{ip}}"
      },
      "responses": {
        "200": {
          "description": "Token retrieved successfully",
          "schema": {
            "type": "object",
            "properties": {
              "access_token": { "type": "string" },
              "token_type": { "type": "string", "enum": ["Bearer"] },
              "cached": { "type": "boolean" },
              "expires_in": { "type": "number" }
            }
          }
        },
        "500": {
          "description": "Token retrieval failed",
          "schema": {
            "type": "object",
            "properties": {
              "error": { "type": "string" },
              "code": { "type": "string" }
            }
          }
        }
      }
    },
    {
      "id": "genre-validation-request",
      "name": "Genre Validation Request",
      "path": "validate-genres",
      "method": "POST",
      "workflow": "genre-validation-workflow",
      "nodeId": "genre-webhook",
      "description": "Endpoint for validating Spotify genre names and getting suggestions",
      "authentication": {
        "type": "headerAuth",
        "required": true,
        "header": "X-API-Key"
      },
      "requestSchema": {
        "type": "object",
        "required": ["genres"],
        "properties": {
          "genres": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1,
            "maxItems": 10,
            "description": "Array of genre names to validate"
          }
        }
      },
      "rateLimit": {
        "requests": 50,
        "window": "1m"
      },
      "responses": {
        "200": {
          "description": "Genres validated successfully",
          "schema": {
            "type": "object",
            "properties": {
              "success": { "type": "boolean" },
              "validGenres": {
                "type": "array",
                "items": { "type": "string" }
              },
              "totalValidated": { "type": "number" },
              "message": { "type": "string" }
            }
          }
        },
        "400": {
          "description": "Invalid genres found with suggestions",
          "schema": {
            "type": "object",
            "properties": {
              "success": { "type": "boolean" },
              "validGenres": { "type": "array" },
              "invalidGenres": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "requested": { "type": "string" },
                    "normalized": { "type": "string" },
                    "isValid": { "type": "boolean" },
                    "suggestions": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  }
                }
              },
              "message": { "type": "string" }
            }
          }
        }
      }
    },
    {
      "id": "playlist-enhancement-request", 
      "name": "Playlist Enhancement Request",
      "path": "enhance-playlists",
      "method": "POST",
      "workflow": "apify-integration-workflow",
      "nodeId": "enhancement-webhook",
      "description": "Endpoint for enhancing playlist data via Apify scraping",
      "authentication": {
        "type": "headerAuth", 
        "required": true,
        "header": "X-API-Key"
      },
      "requestSchema": {
        "type": "object",
        "required": ["playlistIds"],
        "properties": {
          "playlistIds": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^[0-9A-Za-z]{22}$"
            },
            "minItems": 1,
            "maxItems": 50,
            "description": "Array of Spotify playlist IDs to enhance"
          },
          "options": {
            "type": "object",
            "properties": {
              "maxConcurrency": {
                "type": "integer",
                "minimum": 1,
                "maximum": 10,
                "default": 3
              },
              "requestDelay": {
                "type": "integer",
                "minimum": 1000,
                "maximum": 10000,
                "default": 2000
              },
              "retryCount": {
                "type": "integer",
                "minimum": 0,
                "maximum": 5,
                "default": 3
              },
              "proxyCountry": {
                "type": "string",
                "pattern": "^[A-Z]{2}$",
                "default": "US"
              },
              "includeOwnerProfile": {
                "type": "boolean",
                "default": true
              },
              "includeTrackSample": {
                "type": "boolean", 
                "default": true
              },
              "trackSampleSize": {
                "type": "integer",
                "minimum": 1,
                "maximum": 50,
                "default": 10
              }
            }
          }
        }
      },
      "rateLimit": {
        "requests": 10,
        "window": "5m",
        "description": "Limited due to expensive scraping operations"
      },
      "timeout": 300000,
      "responses": {
        "200": {
          "description": "Playlists enhanced successfully",
          "schema": {
            "type": "object",
            "properties": {
              "success": { "type": "boolean" },
              "requestId": { "type": "string" },
              "enhancedPlaylists": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string" },
                    "scrapedData": { "type": "object" }
                  }
                }
              },
              "metadata": {
                "type": "object",
                "properties": {
                  "totalRequested": { "type": "number" },
                  "successfullyProcessed": { "type": "number" },
                  "successRate": { "type": "number" },
                  "processingTime": { "type": "number" }
                }
              }
            }
          }
        },
        "400": {
          "description": "Invalid request parameters"
        },
        "500": {
          "description": "Enhancement failed",
          "schema": {
            "type": "object",
            "properties": {
              "success": { "type": "boolean" },
              "error": {
                "type": "object",
                "properties": {
                  "code": { "type": "string" },
                  "message": { "type": "string" },
                  "details": { "type": "object" }
                }
              },
              "retryable": { "type": "boolean" }
            }
          }
        }
      }
    }
  ],
  "webhookConfiguration": {
    "baseUrl": "{{N8N_WEBHOOK_URL}}",
    "authentication": {
      "apiKey": "{{N8N_WEBHOOK_API_KEY}}",
      "header": "X-API-Key"
    },
    "cors": {
      "enabled": true,
      "origins": [
        "{{NUXT_PUBLIC_APP_URL}}",
        "https://localhost:3000",
        "https://127.0.0.1:3000"
      ],
      "methods": ["GET", "POST", "OPTIONS"],
      "headers": ["Content-Type", "Authorization", "X-API-Key"]
    },
    "security": {
      "rateLimiting": {
        "global": {
          "requests": 1000,
          "window": "1h"
        },
        "perIp": {
          "requests": 100,
          "window": "1m"
        }
      },
      "requestValidation": {
        "enabled": true,
        "maxBodySize": "1MB",
        "contentTypes": ["application/json"]
      },
      "logging": {
        "enabled": true,
        "level": "info",
        "includeRequestBody": false,
        "includeResponseBody": false
      }
    }
  },
  "monitoring": {
    "healthCheck": {
      "enabled": true,
      "path": "health",
      "interval": "30s",
      "timeout": "5s"
    },
    "metrics": {
      "enabled": true,
      "path": "metrics",
      "include": [
        "request_count",
        "response_time",
        "error_rate",
        "active_workflows"
      ]
    },
    "alerts": {
      "errorRate": {
        "threshold": 10,
        "window": "5m",
        "action": "slack_notification"
      },
      "responseTime": {
        "threshold": 30000,
        "window": "5m", 
        "action": "slack_notification"
      },
      "rateLimitExceeded": {
        "action": "log_and_block"
      }
    }
  },
  "deployment": {
    "environment": "{{NODE_ENV}}",
    "scaling": {
      "minInstances": 1,
      "maxInstances": 3,
      "targetCpuUtilization": 70
    },
    "resources": {
      "memory": "512Mi",
      "cpu": "500m"
    }
  }
}